{% extends 'base.html.twig' %}

{% block title %}Add New Phone
{% endblock %}

{% form_theme phoneForm 'bootstrap_5_layout.html.twig' %}


{% block body %}
	<div class="container m-2">
		<div class="row">
			<div class="col-8 p-2">
				{{form_start(phoneForm)}}

				{{form_row(phoneForm.modelName)}}
				{{form_row(phoneForm.constructeur)}}
				{{form_row(phoneForm.price)}}
				{{form_row(phoneForm.description)}}
				{{form_row(phoneForm.stockage)}}
				{{form_row(phoneForm.image)}}
				<button class="btn btn-success mb-2" type="submit">Add New Phone</button>
				{{form_end(phoneForm)}}
				<br>


			</div>
		</div>
	</div>
{% endblock %}
